from flask import Flask, render_template, request
import os
from werkzeug.utils import secure_filename

app = Flask(__name__)

@app.route('/', methods=['GET', 'POST'])
def index():
  if request.method == 'GET':
    return render_template("index.html")
  else: # POST
    name = request.form.get('name')
    email = request.form.get('email')
    temperature = request.form.get('temperature')
    option = request.form.get('option')
    phone = request.form.get('phone')
    
    if int(temperature) > 38.0:
      message = "u have a fever!"
    else:
      message = "Just another day."
    fout = open("INFO.txt", 'a')
    fout.write(name + ',' + email + ',' + str(temperature) + ',' + option + ',' + phone + '\n')
    fout.close()
    fin = open("INFO.txt", 'r')
    lines = fin.readlines()
    fin.close()
    return render_template("index.html", message=message, name=name, email=email, temperature=temperature, option=option, phone =phone, lines=lines )

app.run(host='0.0.0.0', port=8080)
